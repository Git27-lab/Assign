
pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                script {
                    // Your build steps here
                }
            }
        }
        stage('Publish HTML') {
            steps {
                script {
                    // Assuming your HTML file is generated in the 'reports' directory
                    publishHTML([
                        reportName: 'My HTML Report',
                        reportDir: 'reports',
                        reportFiles: 'index.html',
                        keepAll: true,
                        alwaysLinkToLastBuild: true,
                        allowMissing: false
                    ])
                }
            }
        }
    }
}
